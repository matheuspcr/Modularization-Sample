<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailFragment">

    <ImageView
        android:id="@+id/imgAuthorProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAuthorName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="marquee"
        app:layout_constraintBottom_toBottomOf="@id/imgAuthorProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgAuthorProfile"
        app:layout_constraintTop_toTopOf="@id/imgAuthorProfile"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Hello, my name us Peter Parker and i'm spider-man, Hello, my name us Peter Parker and i'm spider-man, Hello, my name us Peter Parker and i'm spider-man, Hello, my name us Peter Parker and i'm spider-man, Hello, my name us Peter Parker and i'm spider-man, Hello, my name us Peter Parker and i'm spider-man, Hello, my name us Peter Parker and i'm spider-man" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAuthorProfile" />

    <TextView
        android:id="@+id/txtRepoName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider"
        tools:text="Nome do repositório" />

    <TextView
        android:id="@+id/txtRepoDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtRepoName"
        tools:text="Descrição do repositório" />

    <ImageView
        android:id="@+id/imgForksCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_fork"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtRepoDesc" />

    <TextView
        android:id="@+id/txtForksCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/imgForksCount"
        app:layout_constraintEnd_toStartOf="@id/imgForksCount"
        app:layout_constraintTop_toTopOf="@id/imgForksCount"
        tools:text="2" />

    <ImageView
        android:id="@+id/imgStarsCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_star"
        app:layout_constraintEnd_toStartOf="@id/txtForksCount"
        app:layout_constraintTop_toBottomOf="@id/txtRepoDesc" />

    <TextView
        android:id="@+id/txtStarsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/imgStarsCount"
        app:layout_constraintEnd_toStartOf="@id/imgStarsCount"
        app:layout_constraintTop_toTopOf="@id/imgStarsCount"
        tools:text="2" />


</androidx.constraintlayout.widget.ConstraintLayout>